<?xml version="1.0" encoding="utf-8" ?>

<!-- main node which handles home screen children -->
<component name="HomeScene" extends="Scene">

    <interface>

        <field id="itemID" type="string" />

        <!-- Content for RowLists in GridScreen on Home Scene -->
        <field id="content" type="node" alias="GridScreen.content" onChange="OnChangeContent"/>

         <!-- Row item selection handlers -->
        <field id="CategoryListItemSelected" type="intarray" alwaysNotify="true" alias="GridScreen.CategoryListItemSelected" onChange="OnRowItemSelected"/>


    </interface>

    <!-- Main Scenegraph thread handler -->
    <script type="text/brightscript" uri="pkg:/components/HomeScene/HomeScene.brs" />

    <!-- rendevous to Main App thread -->
    <script type="text/brightscript" uri="pkg:/source/main.brs" />

    <children>

        <!-- Grid screen with RowList on Home Scene -->
        <GridScreen
            id="GridScreen"
            visible="true"
            translation="[0,0]"
        />

        <!-- Details screen -->
        <DetailsScreen
            id="DetailsScreen"
            visible="false"
        />

    </children>
</component>
