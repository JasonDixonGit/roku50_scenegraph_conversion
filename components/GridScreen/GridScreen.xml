<?xml version="1.0" encoding="utf-8" ?>

<component name="GridScreen" extends="Group" initialFocus="RowList0">
    <interface>

        <!-- Grid Content Nodes For Each Row -->
        <field id="content0" type="node" alias="RowList0.content" onChange="onContentChange"/>
        <field id="content1" type="node" alias="RowList1.content" onChange="onContentChange"/>
        <field id="content2" type="node" alias="RowList2.content" onChange="onContentChange"/>
        <field id="content3" type="node" alias="RowList3.content" onChange="onContentChange"/>

        <field id="sceneContent" type="node" />

        <!-- Button press handler -->
        <field id="menuSelected" type="integer" alwaysnotify="true" alias="MenuButton.itemSelected" />

        <!-- Row item selection handlers -->
        <field id="row0ItemSelected" type="intarray" alwaysnotify="true" alias="RowList0.rowItemSelected"/>
        <field id="row1ItemSelected" type="intarray" alwaysnotify="true" alias="RowList1.rowItemSelected"/>
        <field id="row2ItemSelected" type="intarray" alwaysnotify="true" alias="RowList2.rowItemSelected"/>
        <field id="row3ItemSelected" type="intarray" alwaysnotify="true" alias="RowList3.rowItemSelected"/>

        <!-- Row item focused handler 2 -->
        <field id="itemFocused0" type="intarray" alias="RowList0.rowItemFocused" />
        <field id="itemFocused1" type="intarray" alias="RowList1.rowItemFocused" />
        <field id="itemFocused2" type="intarray" alias="RowList2.rowItemFocused" />
        <field id="itemFocused3" type="intarray" alias="RowList3.rowItemFocused" />

        <!-- Row item focused handler -->
        <field id="lastItemFocus" type="intarray"/>

        <!-- Interface to focused item (Content Node) -->
        <field id="focusedContent"  type="node"/>

        <!-- loaded flag until I figure out how to detect loaded list -->
        <field id="isLoaded" type="boolean"/>
        

        <!-- secondaryColor settings -->
        <field id="row0LabelColor" type="string" alias="RowList0.rowLabelColor"/>
        <field id="row1LabelColor" type="string" alias="RowList1.rowLabelColor"/>
        <field id="row2LabelColor" type="string" alias="RowList2.rowLabelColor"/>
        <field id="row3LabelColor" type="string" alias="RowList3.rowLabelColor"/>
        <field id="labelColor" type="string" alias="MenuButton.focusedColor"/>

        <!-- global font -->
        <field id="font" type="string" />

        <!-- visibility indicators -->
        <field id="MenuLabelVisibility" type="string" alwaysnotify="true" alias="MenuButton.visible" />
        <!--field id="starIconVisibility" type="string" alwaysnotify="true" alias="starIcon.visible" />-->

    </interface>

    <!-- main handler -->
    <script type="text/brightscript" uri="pkg:/components/GridScreen/GridScreen.brs" />



